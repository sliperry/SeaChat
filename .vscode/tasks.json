{
    "tasks": [
        {
            "type": "shell",
            "label": "src",
            "windows": {
                "command": "${workspaceFolder}/chat/build.bat"
            },
            "linux": {
                "command": "${workspaceFolder}/chat/build.sh"
            },
            "options": {
                "cwd": "${workspaceFolder}/chat"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "test",
            "windows": {
                "command": "${workspaceFolder}/test/build.bat"
            },
            "linux": {
                "command": "${workspaceFolder}/test/build.sh"
            },
            "options": {
                "cwd": "${workspaceFolder}/test"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Build Everything",
            "windows": {
                "command": "${workspaceFolder}/build-all.bat"
            },
            "linux": {
                "command": "${workspaceFolder}/build-all.sh"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}